{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "preserve",
    "lib": ["ES2018", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsxImportSource": "vue"
  },
  "include": [
    "packages/*",
    "env.d.ts",
    "packages/**/*.tsx",
    "packages/**/*.ts",
    "packages/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/__tests__/**/*",
    "**/gulpfile.ts",
    "**/test-helper",
    "packages/test-utils",
    "**/*.md",
    "scripts/*.ts"
  ]
}
